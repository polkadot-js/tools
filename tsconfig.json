{
  "extends": "@polkadot/dev/config/tsconfig",
  "exclude": [
    "build/**/*",
    "**/build/**/*"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@polkadot/api-cli": [ "packages/api-cli/src" ],
      "@polkadot/api-cli/*": [ "packages/api-cli/src/*" ],
      "@polkadot/json-serve": [ "packages/json-serve/src" ],
      "@polkadot/json-serve/*": [ "packages/json-serve/src/*" ],
      "@polkadot/monitor-rpc": [ "packages/monitor-rpc/src" ],
      "@polkadot/monitor-rpc/*": [ "packages/monitor-rpc/src/*" ],
      "@polkadot/signer-cli": [ "packages/signer-cli/src" ],
      "@polkadot/signer-cli/*": [ "packages/signer-cli/src/*" ]
    },
    "skipLibCheck": true
  }
}
